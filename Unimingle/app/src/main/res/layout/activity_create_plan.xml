<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#181C24">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Create a Plan"
                    android:textColor="#BFC19B"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEventName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Event Name"
                    android:padding="12dp"
                    android:textColor="#fff"
                    android:textColorHint="#BFC19B" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etSlots"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:drawableLeft="@drawable/ic_person"
                        android:hint="Slots (0/0)"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="#fff"
                        android:textColorHint="#BFC19B" />

                    <EditText
                        android:id="@+id/etDate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Date (DD/MM/YYYY)"
                        android:padding="12dp"
                        android:textColor="#fff"
                        android:textColorHint="#BFC19B" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Plan Details"
                    android:textColor="#BFC19B"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="2"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="top|start"
                        android:hint="Describe your plan..."
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:textColor="#fff"
                        android:textColorHint="#BFC19B" />

                    <ImageButton
                        android:id="@+id/btnUpload"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:background="@drawable/rounded_edittext"
                        android:contentDescription="Upload"
                        android:elevation="4dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_upload" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etTime"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Time (00:00)"
                        android:padding="12dp"
                        android:textColor="#fff"
                        android:textColorHint="#BFC19B" />

                    <EditText
                        android:id="@+id/etLocation"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:drawableLeft="@drawable/ic_location"
                        android:hint="Location"
                        android:padding="12dp"
                        android:textColor="#fff"
                        android:textColorHint="#BFC19B" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnCreatePlan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_button"
                    android:text="Create Plan"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
